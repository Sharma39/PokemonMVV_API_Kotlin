<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E8FB29">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokemon"
        android:layout_margin="10dp"
        android:textAllCaps="true"
        android:fontFamily="@font/bubble_gum"
        android:background="@drawable/ic_round"
        android:textStyle="bold"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="10dp"
        android:layout_margin="20dp"
        android:id="@+id/image_fragmentview"
        app:layout_constraintTop_toBottomOf="@id/title_textview"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/name_fragview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:text="Name"
        android:textSize="40dp"
        android:textAlignment="center"
        android:fontFamily="@font/bubble_gum"
        app:layout_constraintTop_toBottomOf="@id/image_fragmentview"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/hp_fragview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HorsePower"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:fontFamily="@font/bubble_gum"
        app:layout_constraintTop_toBottomOf="@id/name_fragview"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/rarity_fragview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rarity"
        android:textSize="30dp"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/bubble_gum"
        app:layout_constraintTop_toBottomOf="@id/hp_fragview"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/level_fragview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level"
        android:textSize="30dp"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/bubble_gum"
        app:layout_constraintTop_toBottomOf="@id/rarity_fragview"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>